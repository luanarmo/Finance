<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <VBox AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <MenuBar>
            <menus>
                <Menu text="File">
                    <items>
                        <Menu text="New">
                            <items>
                                <MenuItem text="Credit" />
                                <MenuItem text="Debit" />
                            </items>
                        </Menu>
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Reports">
                    <items>
                        <MenuItem text="Spent" />
                        <MenuItem text="Charts" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem text="Manual" />
                        <MenuItem text="Web Page" />
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <ToolBar>
            <Button text="+">
                <tooltip>
                    <Tooltip text="Add Credit"/>
                </tooltip>
            </Button>
            <Separator orientation="VERTICAL"/>
            <Button text="-">

            </Button>
            <Separator orientation="VERTICAL"/>
            <Button text="*">

            </Button>
        </ToolBar>
    </VBox>
</AnchorPane>
